{
  "version": 2,
  "functions": {
    "api/index.js": {
      "includeFiles": "{public/swagger.json,node_modules/swagger-ui-dist/**}"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/health", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "api/index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
